<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h1 class="text-center"><strong><%= @lesson.first_word.content %></strong></h1>
            <% @lesson.first_word.choices.each do |word| %>
                <%= form_for([:lesson, @lesson.answers.build]) do |f| %>
                    <%= f.hidden_field :word_id, value: word.word_id %>
                    <%= f.hidden_field :choice_id, value: word.id %>
                    <%= f.submit word.content, class: 'btn btn-outline-dark btn-block mt-2' %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
