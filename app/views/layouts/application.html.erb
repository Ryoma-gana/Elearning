<!DOCTYPE html>
<html>
  <head>
    <title>RyomaElearning</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Jacques+Francois+Shadow|Oswald&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bevan|Jacques+Francois+Shadow|Oswald&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/1b437bb873.js"></script>
  </head>

  
  <body>
    <%= render 'layouts/header' %>
    <% if flash.any? %>
    <div class="container mt-3">
      <% flash.each do |type, msg| %>
          <div class="alert alert-<%= type %>">
              <div><%= msg %></div>
          </div>
      <% end %>
      </div>
    <% end %>
    
    <%= yield %>
   
    <%= render 'layouts/footer' %>

  </body>
</html>
