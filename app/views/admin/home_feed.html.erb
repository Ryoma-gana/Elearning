<div class="main-container">ADMIN
    <div class="mx-auto" style="width:600px;">
        <div class="card mb-3">
        <div class="card-body text-center">
            <%= gravatar_for current_user %>

            <h1><%= current_user.name %></h1>
            <%= current_user.email %>

            <hr />
            <div class="row">
                <div class="col-lg-6">
                    <h4>Following</h4>
                    <span><%= current_user.following.count %></span>
                </div>
                <div class="col-lg-6">
                    <h4>Followers</h4>
                    <span><%= current_user.followers.count %></span>
                </div>
            </div>
        </div>
        </div>
    </div>
  </div>
